{
  "extends": ["../../.eslintrc.json", "plugin:vue/strongly-recommended", "@vue/typescript/recommended", "prettier"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@cssa-ccw/core-public",
            "message": "usage of @core-public private modules not allowed inside admin facing app."
          }
        ],
        "patterns": [
          {
            "group": ["@core-public/*"],
            "message": "usage of @core-public private modules not allowed inside admin facing app."
          }
        ]
      }
    ],
    "vue/block-lang": [
      "error",
      {
        "script": {
          "lang": "ts"
        },
        "style": {
          "lang": "scss"
        }
      }
    ]
  },
  "ignorePatterns": ["!**/*"],
  "env": {
    "node": true
  },
  "overrides": [
    {
      "files": ["**/*.spec.{j,t}s?(x)"],
      "env": {
        "jest": true
      }
    }
  ]
}
